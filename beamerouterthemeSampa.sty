\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{beamerouterthemeSampa}[2016/11/19 Sampa outer theme]
\RequirePackage{etoolbox}
\RequirePackage{calc}
\RequirePackage{pgfopts}
\pgfkeys{
  /Sampa/outer/numbering/.cd,
    .is choice,
    none/.code=\setbeamertemplate{frame numbering}[none],
    counter/.code=\setbeamertemplate{frame numbering}[counter],
    fraction/.code=\setbeamertemplate{frame numbering}[fraction],
}
\pgfkeys{
  /Sampa/outer/progressbar/.cd,
    .is choice,
    none/.code={%
      \setbeamertemplate{headline}[plain]
      \setbeamertemplate{frametitle}[plain]
      \setbeamertemplate{footline}[plain]
    },
    head/.code={\pgfkeys{/Sampa/outer/progressbar=none}
      \addtobeamertemplate{headline}{}{%
        \usebeamertemplate*{progress bar in head/foot}
      }
    },
    frametitle/.code={\pgfkeys{/Sampa/outer/progressbar=none}
      \addtobeamertemplate{frametitle}{}{%
        \usebeamertemplate*{progress bar in head/foot}
      }
    },
    foot/.code={\pgfkeys{/Sampa/outer/progressbar=none}
      \addtobeamertemplate{footline}{}{%
        \usebeamertemplate*{progress bar in head/foot}%
      }
    },
}
\newcommand{\Sampa@outer@setdefaults}{
  \pgfkeys{/Sampa/outer/.cd,
    numbering=fraction,
    progressbar=none,
  }
}
\setbeamertemplate{navigation symbols}{}
\defbeamertemplate{frame footer}{none}{}
\defbeamertemplate{frame footer}{custom}[1]{ #1 }
\defbeamertemplate{frame numbering}{none}{}
\defbeamertemplate{frame numbering}{counter}{\insertframenumber}
\defbeamertemplate{frame numbering}{fraction}{
  \insertframenumber/\inserttotalframenumber
}
\defbeamertemplate{headline}{plain}{}
\defbeamertemplate{footline}{plain}{%
  \begin{beamercolorbox}[wd=\textwidth, sep=3ex]{footline}%
    \usebeamerfont{page number in head/foot}%
    \usebeamertemplate*{frame footer}
    \hfill%
    \usebeamertemplate*{frame numbering}
  \end{beamercolorbox}%
}
\newlength{\Sampa@frametitle@padding}
\setlength{\Sampa@frametitle@padding}{2.2ex}
\newcommand{\Sampa@frametitlestrut@start}{
  \rule{0pt}{\Sampa@frametitle@padding +%
    \totalheightof{%
      \ifcsdef{Sampa@frametitleformat}{\Sampa@frametitleformat X}{X}%
    }%
  }%
}
\newcommand{\Sampa@frametitlestrut@end}{
  \rule[-\Sampa@frametitle@padding]{0pt}{\Sampa@frametitle@padding}
}
\defbeamertemplate{frametitle}{plain}{%
  \nointerlineskip%
  \begin{beamercolorbox}[%
      wd=\paperwidth,%
      sep=0pt,%
      leftskip=\Sampa@frametitle@padding,%
      rightskip=\Sampa@frametitle@padding,%
    ]{frametitle}%
  \Sampa@frametitlestrut@start%
  \insertframetitle%
  \nolinebreak%
  \Sampa@frametitlestrut@end%
  \end{beamercolorbox}%
}
\setbeamertemplate{frametitle continuation}{%
  \usebeamerfont{frametitle}
  \romannumeral \insertcontinuationcount
}
\newlength{\Sampa@progressinheadfoot}
\newlength{\Sampa@progressinheadfoot@linewidth}
\setlength{\Sampa@progressinheadfoot@linewidth}{0.4pt}
\setbeamertemplate{progress bar in head/foot}{
  \nointerlineskip
  \setlength{\Sampa@progressinheadfoot}{%
    \paperwidth * \ratio{\insertframenumber pt}{\inserttotalframenumber pt}%
  }%
  \begin{beamercolorbox}[wd=\paperwidth]{progress bar in head/foot}
    \begin{tikzpicture}
      \fill[bg] (0,0) rectangle (\paperwidth, \Sampa@progressinheadfoot@linewidth);
      \fill[fg] (0,0) rectangle (\Sampa@progressinheadfoot, \Sampa@progressinheadfoot@linewidth);
    \end{tikzpicture}%
  \end{beamercolorbox}
}
\AtBeginDocument{%
  \apptocmd{\appendix}{%
    \pgfkeys{%
      /Sampa/outer/.cd,
      numbering=none,
      progressbar=none}
    }{}{}
}
\Sampa@outer@setdefaults
\ProcessPgfPackageOptions{/Sampa/outer}
\endinput
